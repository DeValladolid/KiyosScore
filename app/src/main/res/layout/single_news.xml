<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:foreground="?attr/selectableItemBackground"
    android:padding="10dp">

    <ImageView
        android:id="@+id/news_featured"
        android:layout_gravity="top"
        android:layout_width="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textColor="@color/colorPrimary"
        android:layout_toLeftOf="@+id/news_featured"
        android:ellipsize="end"
        android:text="But I must explain to you how all this mistaken"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/news_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="3"
        android:textColor="@color/colorPrimary"
        android:ellipsize="end"
        android:layout_below="@+id/news_title"
        android:layout_toLeftOf="@+id/news_featured"
        android:paddingTop="10dp"
        android:text="But I must explain to you how all this mistaken idea of denouncing pleasure and praising pain was born and I will give you a complete account of the system" />

    <TextView
        android:id="@+id/news_post_time"
        android:paddingTop="5dp"
        android:textColor="#ccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_desc"
        android:text="ከትናንት ወዲያ" />

    <TextView
        android:id="@+id/news_cat"
        android:layout_below="@id/news_desc"
        android:layout_toRightOf="@id/news_post_time"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:layout_height="wrap_content"
        android:text="አርሰናል"/>

    <View
        android:id="@+id/separator"
        android:layout_marginTop="10dp"
        android:layout_below="@id/news_post_time"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/share"
        android:padding="4dp"
        android:text="አጋራ"
        android:layout_below="@+id/news_desc"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_above="@+id/separator"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/more"
        android:padding="4dp"
        android:layout_below="@+id/news_desc"
        android:layout_toLeftOf="@+id/share"
        android:layout_width="wrap_content"
        android:text="ተጨማሪ"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_above="@+id/separator" />


</RelativeLayout>